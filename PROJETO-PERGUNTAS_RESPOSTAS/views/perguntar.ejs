<%- include('partials/header.ejs')%>

    <body>
        <nav class="navbar navbar-light bg-primary">
            <a class="navbar-brand mx-2" href="/">
                <img src="/img/guia.png" alt="logo">
            </a>
        </nav>
        <div class="container">
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="text-center">Realizar pergunta</h3>
                </div>
                <div class="card-body">
                    <form action="/salvarpergunta" method="POST">
                        <label for="titulo">Título</label>
                        <input class="form-control mb-3" type="text" name="titulo" id="titulo" placeholder="Título">
                        <label for="descricao">Descrição</label>
                        <textarea class="form-control mb-3" name="descricao" id="descricao"
                            placeholder="Digite aqui a sua dúvida"></textarea>
                        <button class="btn btn-primary">Enviar Pergunta</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
    <%- include('partials/footer.ejs')%>